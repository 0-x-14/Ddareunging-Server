files:
    "/sbin/appstart":
        mode: "000755"
        owner: webapp
        group: webapp
        content: |
            #!/usr/bin/env bash
            JAR_PATH=/var/app/current/application.jar

            # run app
            killalljava
            java -Dfile.encoding=UTF-8 -jar $JAR_PATH
            # 만약 application.yml에 profile 설정을 할 경우 위 코드를
            # java -Dfile.encoding=UTF-8 -Dspring.profiles.active=dev -jar $JAR_PATH 로 수정해야 한다.encoding